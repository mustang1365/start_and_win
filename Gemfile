source 'http://rubygems.org'

gem 'rails', '3.1.0'

gem 'jquery-rails' #use jquery not prototype

gem 'sorcery' #for authentication

gem "heroku" #for deploying our staging to heroku

gem 'truncate_html' #for truncate data

gem "active_attr" #add to class(witch is not inherit from ActiveRecord) all functionality of ActiveRecord class

gem 'rails3-jquery-autocomplete' #for autocomplete

gem 'mysql2' #use mysql

gem "simple_form" #to use simple form methods

gem "ckeditor" #for wysiwig

gem "carrierwave" #for upload images
gem "mini_magick" #for resize images

gem "nested_form", :git => 'git://github.com/ryanb/nested_form.git' #to use nested form(use directly from github because of problems with rails 3.1)




group :production do
  gem 'execjs'
  gem 'therubyracer'
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end
#for styled print in console
group :console do
  gem 'hirb'
  gem 'wirble'
  gem 'awesome_print'
end

group :test do

end
