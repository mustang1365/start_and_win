<%= simple_form_for(@news_point) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :title %>
    <%= f.input :description, :as => :ckeditor , :input_html => { :toolbar => 'Full', :style => "width:400px" } , :label => false %>
    <%= f.input :end_date %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
