<% if defined?(news_point) %>
    </tr>

    <tr align="center">
      <td align="left"><%= image_tag(news_point.image.try(:image_url)) %></td>
      <td align="left"><%= link_to news_point.try(:title) , admin_news_point_path(news_point) %></td>
      <td><%= news_point.try(:description).html_safe%></td>
