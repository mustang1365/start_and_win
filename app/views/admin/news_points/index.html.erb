<% @news_points.each do |news_point| %>
  <tr>
    <td><%= news_point.title %></td>
    <td><%= news_point.text.html_safe %></td>
    <td><%= news_point.expire_date.strftime('%d/%M/%Y %H:%m') %></td>
    <td><%= link_to 'Show', news_point %></td>
    <td><%= link_to 'Edit', edit_news_point_path(news_point) %></td>
    <td><%= link_to 'Destroy', news_point, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

