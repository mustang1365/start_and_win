<% if defined?(category) && defined?(model) %>
    <% selected_array ||= []  %>
    <% category.sub_categories.each do |sub_category| %>
        <input  id="<%= model %>_sub_categories_attributes_<%= sub_category.id %>" name="<%= model %>[sub_categories_attributes][<%= sub_category.id %>]" type="checkbox" value="0" <%= 'checked=checked'if selected_array.include?(sub_category.id) %>> <%= sub_category.title %>
    <% end %>
<% end %>